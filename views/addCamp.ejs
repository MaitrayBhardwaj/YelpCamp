<% layout("layouts/boilerplate.ejs")%>
<h1>Add a Campground</h1>
<form action="/campgrounds" method="POST"class="d-flex flex-column justify-content-evenly" method="POST">
	<input class="mt-3 p-2" type="text" name="title" placeholder="Campground Name">
	<input class="mt-3 p-2" type="text" name="price" placeholder="Campground Price">
	<input class="mt-3 p-2" type="text" name="desc" placeholder="Campground Description">
	<input class="mt-3 p-2" type="text" name="location" placeholder="Campground Location">
	<div class="d-flex mt-3">
		<button class="btn btn-success">Submit</button>
		<a href="/campgrounds/" class="btn btn-primary mx-3">Cancel</a>
	</div>
</form>
